<Window x:Class="Meditrans.Client.Views.Admin.Billing.BillingItemPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Meditrans.Client.ViewModels"
        mc:Ignorable="d"
        
        SizeToContent="Height"
        Width="400"
        WindowStartupLocation="CenterOwner"
        >
    
    <StackPanel Margin="15">
        <Label Content="Description"/>
        <TextBox Text="{Binding CurrentBillingItem.Description, UpdateSourceTrigger=PropertyChanged}"/>

        <Label Content="Unit"/>
       
        <ComboBox ItemsSource="{Binding AvailableUnits}" SelectedValue="{Binding CurrentBillingItem.UnitId}" DisplayMemberPath="Description" SelectedValuePath="Id"/>

        <CheckBox Content="Is Copay" IsChecked="{Binding CurrentBillingItem.IsCopay}" Margin="0,10"/>

        <GroupBox Header="Accounts Receivable" Margin="0,5">
            <StackPanel>
                <Label Content="AR Account"/>
                <TextBox Text="{Binding CurrentBillingItem.ARAccount, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="AR Sub-Account"/>
                <TextBox Text="{Binding CurrentBillingItem.ARSubAccount, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="AR Company"/>
                <TextBox Text="{Binding CurrentBillingItem.ARCompany, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Accounts Payable" Margin="0,5">
            <StackPanel>
                <Label Content="AP Account"/>
                <TextBox Text="{Binding CurrentBillingItem.APAccount, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="AP Sub-Account"/>
                <TextBox Text="{Binding CurrentBillingItem.APSubAccount, UpdateSourceTrigger=PropertyChanged}"/>
                <Label Content="AP Company"/>
                <TextBox Text="{Binding CurrentBillingItem.APCompany, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </GroupBox>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True" MinWidth="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80"/>
        </StackPanel>
    </StackPanel>
</Window>