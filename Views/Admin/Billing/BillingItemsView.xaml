<UserControl x:Class="Meditrans.Client.Views.Admin.Billing.BillingItemsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:viewModels="clr-namespace:Meditrans.Client.ViewModels"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:helpers="clr-namespace:Meditrans.Client.Helpers"
             d:DesignHeight="600" d:DesignWidth="1000">

    <UserControl.Resources>
        <helpers:BindingProxy x:Key="vmProxy" Data="{Binding}" />

    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Add button -->
        <Button Grid.Row="0"               
                Content="➕" 
                ToolTip="Add Billing Item" 
                Command="{Binding AddBillingItemCommand}"
                HorizontalAlignment="Left" 
                Margin="10" 
                Padding="10,5"/>

        <!-- Grid to display data -->
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding BillingItems}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"                
                 AlternationCount="2"
                AlternatingRowBackground="White"                                    
                Style="{StaticResource CustomDataGridStyle}"
                ColumnHeaderStyle="{StaticResource CustomColumnHeaderStyle}"
                RowStyle="{StaticResource CustomRowStyle}"
                CellStyle="{StaticResource CustomCellStyle}"
                SelectionUnit="FullRow">
            <DataGrid.Columns>
                <!-- Column with edit button -->
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="✎"
                                    Command="{Binding DataContext.EditBillingItemCommand, RelativeSource={RelativeSource AncestorType={x:Type DataGrid}}}"
                                    CommandParameter="{Binding}"
                                    ToolTip="Edit Item"
                                    Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- BillingItem Object Columns -->
                <DataGridTextColumn 
                    Binding="{Binding Description}"
                    Header="{Binding Data.ColumnHeaderDescription, Source={StaticResource vmProxy}}"  Width="2*" />

                <DataGridTextColumn 
                    Binding="{Binding Unit.Abbreviation}"
                    Header="{Binding Data.ColumnHeaderUnit, Source={StaticResource vmProxy}}"  Width="Auto" />

                <DataGridTextColumn 
                    Binding="{Binding IsCopay}"
                    Header="{Binding Data.ColumnHeaderIsCopay, Source={StaticResource vmProxy}}"  Width="Auto" />

                <DataGridTextColumn 
                    Binding="{Binding ARAccount}"
                    Header="{Binding Data.ColumnHeaderARAccount, Source={StaticResource vmProxy}}"  Width="*" />

                <DataGridTextColumn 
                    Binding="{Binding ARSubAccount}"
                    Header="{Binding Data.ColumnHeaderARSubAccount, Source={StaticResource vmProxy}}"  Width="*" />

                <DataGridTextColumn 
                    Binding="{Binding ARCompany}"
                    Header="{Binding Data.ColumnHeaderARCompany, Source={StaticResource vmProxy}}"  Width="*" />

                <DataGridTextColumn 
                    Binding="{Binding APAccount}"
                    Header="{Binding Data.ColumnHeaderARCompany, Source={StaticResource vmProxy}}"  Width="*" />

                <DataGridTextColumn 
                    Binding="{Binding APSubAccount}"
                    Header="{Binding Data.ColumnHeaderAPSubAccount, Source={StaticResource vmProxy}}"  Width="*" />

                <DataGridTextColumn 
                    Binding="{Binding APCompany}"
                    Header="{Binding Data.ColumnHeaderAPCompany, Source={StaticResource vmProxy}}"  Width="*" />
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>