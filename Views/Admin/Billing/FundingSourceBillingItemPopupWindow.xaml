<Window x:Class="Meditrans.Client.Views.Admin.Billing.FundingSourceBillingItemPopupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Billing Item Rule"
        Width="600" MaxHeight="750"
        WindowStartupLocation="CenterOwner"
        SizeToContent="Height">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <!-- Contenido con Scroll -->
            <RowDefinition Height="Auto" />
            <!-- Botones -->
        </Grid.RowDefinitions>

        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Padding="0,0,15,0">
            <StackPanel>
                <!-- Grupo de Asociación -->
                <GroupBox Header="Core Association" FontWeight="Bold">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="140"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Billing Item *:" VerticalAlignment="Center" />
                        <ComboBox Grid.Row="0" Grid.Column="1" Margin="5"
                                  ItemsSource="{Binding AvailableBillingItems}"
                                  SelectedValue="{Binding CurrentItem.BillingItemId}"
                                  DisplayMemberPath="Description"
                                  SelectedValuePath="Id"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Space Type *:" VerticalAlignment="Center" />
                        <ComboBox Grid.Row="1" Grid.Column="1" Margin="5"
                                  ItemsSource="{Binding AvailableSpaceTypes}"
                                  SelectedValue="{Binding CurrentItem.SpaceTypeId}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Id"/>
                    </Grid>
                </GroupBox>

                <!-- Grupo de Precios y Tarifas -->
                <GroupBox Header="Rate and Pricing" FontWeight="Bold" Margin="0,10,0,0">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="140"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Rate:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CurrentItem.Rate, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

                        <Label Grid.Row="0" Grid.Column="2" Content="Per:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding CurrentItem.Per, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

                        <Label Grid.Row="1" Grid.Column="0" Content="Min Charge:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentItem.MinCharge, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

                        <Label Grid.Row="1" Grid.Column="2" Content="Max Charge:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding CurrentItem.MaxCharge, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

                        <Label Grid.Row="2" Grid.Column="0" Content="Procedure Code:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding CurrentItem.ProcedureCode, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                    </Grid>
                </GroupBox>

                <!-- Grupo de Reglas de Cantidad -->
                <GroupBox Header="Quantity Rules" FontWeight="Bold" Margin="0,10,0,0">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="140"/>
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Greater Than (>) Min Qty:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding CurrentItem.GreaterThanMinQty, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

                        <Label Grid.Row="1" Grid.Column="0" Content="Less Or Equal (&lt;=) Max Qty:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding CurrentItem.LessOrEqualMaxQty, UpdateSourceTrigger=PropertyChanged}" Margin="5" />

                        <Label Grid.Row="2" Grid.Column="0" Content="Free Quantity:" VerticalAlignment="Center" />
                        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding CurrentItem.FreeQty, UpdateSourceTrigger=PropertyChanged}" Margin="5" />
                    </Grid>
                </GroupBox>

                <!-- Grupo de Período de Validez -->
                <GroupBox Header="Validity Period" FontWeight="Bold" Margin="0,10,0,0">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="140"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="From Date:" VerticalAlignment="Center"/>
                        <DatePicker Grid.Row="0" Grid.Column="1" SelectedDate="{Binding CurrentItem.FromDate}" Margin="5"/>

                        <Label Grid.Row="0" Grid.Column="2" Content="To Date:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <DatePicker Grid.Row="0" Grid.Column="3" SelectedDate="{Binding CurrentItem.ToDate}" Margin="5"/>
                    </Grid>
                </GroupBox>

                <CheckBox Content="Is Default" IsChecked="{Binding CurrentItem.IsDefault}" Margin="5,15,5,5"/>

            </StackPanel>
        </ScrollViewer>

        <!-- Botones de Acción -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Save" Command="{Binding SaveCommand}" IsDefault="True" MinWidth="80" Margin="0,0,10,0"/>
            <Button Content="Cancel" IsCancel="True" MinWidth="80"/>
        </StackPanel>
    </Grid>
</Window>