<Window x:Class="Meditrans.Client.Views.Admin.Employees.AddEditUserView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:Meditrans.Client.Converters"
    mc:Ignorable="d"
    Title="Add/Edit User" Height="480" Width="400"
    WindowStartupLocation="CenterOwner" SizeToContent="Height"
    WindowStyle="ToolWindow"
    ResizeMode="NoResize">

    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </Window.Resources>
    
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Full Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding User.FullName, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Content="Username:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding User.Username, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <Label Content="Password:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"
               Visibility="{Binding IsCreateMode, Converter={StaticResource BoolToVisConverter}}"/>

        <PasswordBox x:Name="PasswordBox" PasswordChanged="PasswordBox_PasswordChanged" 
                     Grid.Row="2" Grid.Column="1" Margin="5"
                     Visibility="{Binding IsCreateMode, Converter={StaticResource BoolToVisConverter}}"/>

        <Label Content="Email:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding User.Email}" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <Label Content="Phone:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding User.PhoneNumber}" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <Label Content="Address:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
        <TextBox Text="{Binding User.Address}" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <Label Content="Role:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="6" Grid.Column="1" Margin="5"
                  ItemsSource="{Binding AvailableRoles}"
                  DisplayMemberPath="RoleName"
                  SelectedValuePath="Id"
                  SelectedValue="{Binding User.RoleId}"/>

        <Label Content="Active:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
        <CheckBox IsChecked="{Binding User.IsActive}" Grid.Row="7" Grid.Column="1" Margin="5" VerticalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Grid.Row="9" Grid.Column="1" HorizontalAlignment="Right">
            <Button Content="Save" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="0,0,10,0"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        </StackPanel>
    </Grid>
</Window>