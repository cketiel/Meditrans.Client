                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Border>-->

        
                <!-- Semi-transparent white background -->
                <Border Background="#80FFFFFF" 
                    Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:Card Padding="20" UniformCornerRadius="10">
                            <StackPanel Orientation="Horizontal">
                                
                                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                                             IsIndeterminate="True" 
                                             Value="0"
                                             Margin="0,0,15,0"/>
                                <TextBlock Text="Loading data..." 
                                           VerticalAlignment="Center"
                                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Border>

                <Border Background="#80FFFFFF" 
                Visibility="{Binding IsExporting, Converter={StaticResource BoolToVis}}">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <materialDesign:Card Padding="20" UniformCornerRadius="10">
                            <StackPanel Orientation="Horizontal">

                                <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}" 
                             IsIndeterminate="True" 
                             Value="0"
                             Margin="0,0,15,0"/>
                                <TextBlock Text="Exporting data..." 
                           VerticalAlignment="Center"
                           Style="{StaticResource MaterialDesignHeadline6TextBlock}"/>
                            </StackPanel>
                        </materialDesign:Card>
                    </StackPanel>
                </Border>

            </Grid>
        
        </Grid>
    </Border>
</UserControl>